<div class="mb-3">
  <%= link_to new_room_path, class: "btn btn-primary" do %>
    Create a room
  <% end %>
</div>

<% if @rooms.present? %>
  <% @rooms.each do |room| %>
    <%= link_to room.name, room_path(room), class: "nav-link room-nav-link" %>
  <% end %>
<% else %>
  <div class="text-muted">
    The are no rooms
  </div>
<% end %>
